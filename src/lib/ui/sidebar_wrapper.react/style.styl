.pvc-sidebar-wrapper
  width calc(25% - 2rem)
  margin-right 4rem

  display flex
  flex-direction column

  // Icon
  .pvc-sw-icon
    height 30px
    line-height 30px  

    margin-bottom 20px
    font-size 20px

    color #999

  > input
    height 32px
    line-height 32px
    font-size 24px

    border none
    border-bottom 1px dashed #333

    margin-bottom 40px
  
  > textarea
    border none
    border-radius 8px
    box-shadow 0 1px 0px 1px rgba(0, 0, 0, 0.2)

    padding 20px 13px

  > h1
    font-size 24px
    margin-bottom 30px