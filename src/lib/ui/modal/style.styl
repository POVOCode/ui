#pvc-modal
  width 100%
  height 100%

  position fixed
  top 0
  left 0

  z-index 99
  background rgba(0, 0, 0, 0.2)

  display flex
  align-items center
  justify-content center

  > div
    width 360px
    background #fff
    border-radius 4px
    box-shadow 0 0 1px 2px rgba(0, 0, 0, 0.2)

    display flex
    flex-direction column
    padding 20px 50px

    z-index 100

    position relative

  .pvc-logo
    width 100%
    margin 50px 0 30px 0

    img
      margin 0 auto
      display block

  input
    width 100%
    border none
    border-bottom 1px solid #76a4bc
    line-height 40px
    font-size 14px

    margin-bottom 10px

    &::placeholder
      color #9e9e9e

  button
    height 40px
    border none
    border-radius 20px
    color #fff
    width 100%
    font-size 15px