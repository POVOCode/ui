@require ("../../style/colors.styl")

#pvc-user-sidebar
  position absolute
  top 0
  right 0

  height 100%
  width 280px
  background #ffffff

  box-shadow -1px 0 8px 0 rgba(0, 0, 0, 0.2)

  li.last
    margin-bottom 30px

  a
    height 40px
    line-height 40px

    display flex
    flex-direction row

    i
      font-size 18px
      color $pv_primary_color
      text-align right
      width 64px
      margin-top -1px
    
    p
      font-size 16px

      flex 1
      color #000
      padding-left 24px
      font-weight bold
  
    &:hover
      background $pv_primary_color
      text-decoration none
      box-shadow inset 0 0 4px 0 rgba(0, 0, 0, 0.15)

      i, p
        color #fff

#pvc-us-close
  line-height 64px
  padding-right 45px
  font-size 32px
  color $pv_primary_color
  text-align right