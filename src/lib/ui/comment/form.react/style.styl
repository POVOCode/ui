@require "../../../style/colors"

.pvc-comment-form
  position relative

  > *
    display block

  h5
    color #4b4b4b
    margin-bottom 20px

  button
    position absolute  
    bottom 10px
    right 10px

    color $pv_primary_color
    background transparent
    border none

    &:hover
      text-decoration underline

  &.disabled
    button
      display none
    
    textarea, h5
      opacity 0.5