#pv-pe-products
  padding-top 62px
  padding-bottom 62px

  width calc(75% - 2rem)

  header
    > p:first-child
      font-size 14px
      font-weight bold
      color #666
      margin-bottom 16px

      width 100%
      flex 1
    
    input[type=search]
      width 100%
      height 36px
      padding 0 18px

      line-height 36px
      font-size 14px
      font-weight 600

      border 1px solid #d6d6d6
      background #fff

      border-radius 4px
      color #000
      text-align center
