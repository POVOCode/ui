@require "../../../style/colors.styl"

#pvc-poll-bottom-bar
  position fixed
  bottom 0
  left 0

  padding 0 50px
  width 100%
  height 100px
  line-height 100px

  border-top 1px solid #e7e7e7
  background #fff

  display flex
  flex-direction row

  p, a
    color #494949
    font-size 14px
    font-weight 600

    &.pvc-button-primary
      display block
      margin-top 30px

  > *
    margin-right 20px

    &:last-child
      margin-right 0

  > i
    color $pv_primary_color
    font-size 20px

    & + p, & + ul
      flex 1

  > ul li
    display inline-block
    vertical-align middle

    padding 0 12px

    p:not(.active)
      color #a7a7a7

    .icon-right-open
      color $pv_primary_color
      opacity 0.5
