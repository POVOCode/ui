.pvc-card-grid
  display flex
  flex-direction row
  padding 0

  > ul
    width 100%

    > li
      display inline-block
      vertical-align top

      margin-right 17px
      margin-bottom 17px

      border-radius 8px
      box-shadow 0 1px 0px 1px rgba(0, 0, 0, 0.1)

      > .pvc-card
        display inline-flex
        width 100%

        box-shadow none
