.pvc-admin-sidebar-header
  margin-bottom 25px
  padding-bottom 10px
  width 80%

  color #333
  border-bottom 1px solid #ccc

.pvc-admin-sidebar-control
  margin-bottom 20px

  > *
    display block

  label
    margin-bottom 5px
    color #666

  input, textarea
    padding 5px 10px
    border-radius 4px
    border 1px solid #ccc
    box-shadow none

    width 80%

  input[type=checkbox]
    width auto
    margin 10px 0 0 0

.pvc-admin-sidebar-submit
  display flex
  flex-direction row
  padding-right 20%

  > *
    margin-right 20px

    &:first-child
      flex 1
      text-align left

    &:first-child, &:last-child
      margin-right 0

  button
    padding 5px 10px
    opacity 0.5

    background #2c3e50
    border 1px solid #34495e
    color #fff

    &:hover:not([disabled])
      cursor pointer
      opacity 1

    &.pvc-btn-cancel
      background #c0392b
      border 1px solid #e74c3c
      color #fff

    &.pvc-btn-save
      background #27ae60
      border 1px solid #2ecc71
      color #fff

.pvc-admin-table
  width 100%
  text-align left
  border-spacing 0

  tbody
    tr
      margin 0

      &:hover
        background #eee
        cursor pointer

  thead th
    border-bottom 1px solid #ccc

  tbody td, thead th
    padding 10px 5px
