@require ("../../../style/colors.styl")

#pv-modal-toaster
  width 100%

#pv-modal-toast
  display flex
  flex-direction row

  width 100%
  color #fff
  background $pv_primary_color

  padding 0 14px

  .pt-icon-standard
    line-height 40px
    font-weight normal
    margin-left 4px
    font-size 18px

  &:hover
    cursor pointer

  > div
    text-align center
    flex 1
    width 100%

    display flex
    flex-direction row
    justify-content center
  
    p
      font-weight bold
      line-height 40px
